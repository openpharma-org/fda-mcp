{
  "name": "@openpharma-org/fda-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for FDA drug information lookup and safety data. Provides access to FDA drug labels, adverse events, and regulatory information through the openFDA API.",
  "main": "build/index.js",
  "bin": {
    "fda-mcp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/post-build.js",
    "build:legacy": "esbuild src/index.js --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --external:@modelcontextprotocol/sdk --external:axios",
    "clean": "rm -rf build dist tests/coverage tests/reports",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "start": "npm run build && node build/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:integration": "node tests/integration/test-mcp-compliance.js",
    "test:e2e": "npm run build && node tests/integration/test-claude-desktop.js",
    "test:all": "npm run test && npm run test:integration"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "fda",
    "drug",
    "medication",
    "pharmacy",
    "safety",
    "adverse-events",
    "openfda",
    "healthcare",
    "model-context-protocol"
  ],
  "author": "OpenPharma Contributors",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openpharma-org/fda-mcp-server.git"
  },
  "homepage": "https://github.com/openpharma-org/fda-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/openpharma-org/fda-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "axios": "^1.7.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^22.18.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.0.0",
    "jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2"
  }
}
